<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shapewoshadow"
    android:layout_marginBottom="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:padding="5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/anim_declined"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="10dp"
                app:lottie_autoPlay="true"
                app:lottie_fileName="declined.json"
                app:lottie_loop="false"
                app:lottie_renderMode="automatic"
                app:lottie_repeatCount="0"
                app:lottie_speed="1"

                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usługa niedostępna!"
            android:textStyle="bold"
            android:textSize="27sp"
            android:textColor="@color/bg_Profitz"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                    android:textSize="17sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
            android:textColor="#2C2C2C"
        android:textAlignment="center"
            android:text="Przepraszamy. Obecnie ta usługa jest niedostępna."
            />
        <TextView
            android:id="@+id/button_understand_disable_future"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MyButtonStyle"
            android:background="@drawable/gradient_button_shape"
            android:text="Rozumiem"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:textSize="20sp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</RelativeLayout>
</androidx.core.widget.NestedScrollView>