<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:theme="@style/SignUpPhone"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="220dp"
            android:layout_height="220dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_s9_slajd_rejestracja_true"

            />

        <TextView
            android:id="@+id/text2_step7"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="330dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/bg_Profitz"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Zaakceptuj warunki korzystania z usług"
            android:textStyle="bold"
            android:textSize="29sp" />

        <TextView
            android:id="@+id/text3_step7"
            app:layout_constraintTop_toBottomOf="@id/text2_step7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#FFCA2B"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Regulamin"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text4_step7"
            app:layout_constraintTop_toBottomOf="@id/text3_step7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#FFCA2B"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Polityka prywatności"
            android:textStyle="bold"
            android:textSize="20sp" />
        <CheckBox
            android:id="@+id/chk1_step8"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimaryMid"
            android:padding="4dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toBottomOf="@id/text4_step7"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Zapoznałem się i zgadzam się z warunkami regulaminu, oraz polityką prywatności."
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent" />
        <CheckBox
            android:id="@+id/chk4_step8"
            android:buttonTint="@color/colorPrimaryMid"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="4dp"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toBottomOf="@id/chk1_step8"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Wyrażam zgodę na kontakt drogą elektroniczną, oraz wysyłanie informacji handlowej."
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>
