<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:id="@+id/relative_global_my_awards"
    tools:context="com.profitz.app.promos.activities.LoginActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:layout_marginTop="5dp"
        android:rotation="-4.5"
        android:scaleType="fitXY"
        android:scaleX="-1"
        app:srcCompat="@drawable/ic_underline_awards_white" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:layout_marginTop="-25dp"
        android:rotation="-4.5"
        android:scaleType="fitXY"
        android:scaleX="-1"
        app:srcCompat="@drawable/ic_underline_awards_2" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:layout_marginTop="-1dp"
        android:scaleType="fitXY"
        android:scaleX="-1"
        app:srcCompat="@drawable/ic_underline_awards_1" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:minHeight="80dp"
        android:scaleType="fitXY"
        android:scaleX="-1"
        app:srcCompat="@drawable/ic_underline_awards_0" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:layout_marginTop="0dp"
        android:rotation="4.5"
        android:layout_marginEnd="-30dp"
        android:scaleType="fitXY"
        android:scaleX="-1"
        app:srcCompat="@drawable/ic_underline_awards_3" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:layout_marginTop="271dp"
        android:rotation="175"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_underline_awards_white2" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="-30dp"
                android:minHeight="80dp"
                android:rotation="4.5"
                android:scaleType="fitXY"
                android:scaleX="-1"
                app:srcCompat="@drawable/ic_underline_awards_4" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="-15dp"
                android:layout_marginTop="300dp"
                android:layout_marginEnd="-10dp"
                android:minHeight="80dp"
                android:rotation="182"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_underline_awards_white3" />


        </RelativeLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/rv_tasks"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="0dp"
        android:visibility="visible"
        android:paddingTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="50dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingEnd="5dp" />

    <LinearLayout

        android:id="@+id/task_of_day"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:focusable="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp"
        android:background="@drawable/shape_gradient_white"
        android:elevation="100dp"
        android:orientation="horizontal"
        android:layout_marginEnd="-5dp"
        android:paddingEnd="55dp"
        android:bottomLeftRadius="25dp"
        android:bottomRightRadius="25dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Odbierz prezent"
            android:textSize="14sp"
            android:id="@+id/get_daily_present_text"
            android:layout_gravity="center_vertical"
            android:textColor="@color/bgGradientEnd"
            android:layout_marginStart="5dp"
            />

    </LinearLayout>
    <ImageView
        android:id="@+id/imageDailyTask"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@id/task_of_day"
        app:layout_constraintEnd_toEndOf="@id/task_of_day"
        android:foregroundGravity="center"
        android:maxWidth="50dp"
        android:layout_marginEnd="3dp"
        android:layout_alignParentEnd="true"
        android:elevation="100dp"
        android:maxHeight="50dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/prezent_task"
        />
    <TextView
        android:id="@+id/textEarnTasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/rl_change_TaskShow"
        android:textColor="@color/white"
        android:layout_marginTop="-80dp"
        android:layout_marginStart="10dp"
        android:text="Aktywne zadania"
        android:textSize="23sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:id="@+id/rl_change_TaskShow"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/rv_tasks"
        >
        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/round_cat_grey_circle"
            android:gravity="center"
            android:id="@+id/changeTaskShowRL"
            >

            <ImageView
                android:id="@+id/changeTaskShowType"
                android:layout_width="15dp"
                android:layout_marginTop="2dp"
                android:layout_height="12dp"
                android:layout_alignParentEnd="true"
              />
        </RelativeLayout>

        <TextView
            android:id="@+id/changeTaskShowTypeText"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/changeTaskShowRL"
            android:gravity="center_vertical"
            android:text="Pokaż ukończone"
            android:textColor="@color/white" />
</RelativeLayout>


    <LinearLayout
        android:id="@+id/points_layout_info_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rv_tasks"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/textInfo6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:text="Zdobyte nagrody"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/NotificationList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="2dp"
            android:paddingBottom="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textInfo6" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:visibility="gone"
            android:focusable="true"
            android:id="@+id/show_all_notifications_awards"
            android:textColor="@color/bg_Profitz"
            android:foreground="?attr/selectableItemBackground"
            android:text="Zobacz wszystkie"
            android:textSize="15sp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nothings_here_awards_lr"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/nothings_here_awards"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:textColor="@color/bg_Profitz"
                android:text="Nic tu nie ma!"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/gray_holo_light"
                android:text="Nie otrzymałeś/aś jeszcze żadnych nagród."
                />
        </LinearLayout>
    </LinearLayout>




    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_marginTop="295dp"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:layout_marginBottom="60dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp">


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-15dp"
                android:scrollbars="none"
                android:layout_marginRight="-15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textEarnTasks"
                    android:layout_gravity="start"
                    android:layout_marginLeft="-15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">



                    <LinearLayout
                        android:id="@+id/task1"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="10dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:background="@drawable/shape_gradient"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="15dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="+ 10 xp"
                                android:layout_marginTop="5dp"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="5dp"
                                android:textColor="#ffffff"
                                android:textAlignment="center"
                                android:textSize="7.5sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:text="+ 0.10 pkt"
                                android:layout_marginRight="5dp"
                                android:textColor="#ffffff"
                                android:textAlignment="center"
                                android:textSize="7.5sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                        <ImageView
                            android:id="@+id/iv_task1"
                            android:layout_width="match_parent"
                            android:layout_height="95dp"
                            android:layout_marginTop="2dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            app:srcCompat="@drawable/task1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_task1"
                            android:text="Pierwsza promocja"
                            android:textColor="#ffffff"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:textStyle="bold" />



                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/task2"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="10dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:background="@drawable/shape_gradient"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="15dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="+ 10 xp"
                                android:layout_marginTop="5dp"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="5dp"
                                android:textColor="#ffffff"
                                android:textAlignment="center"
                                android:textSize="7.5sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:text="+ 0.10 pkt"
                                android:layout_marginRight="5dp"
                                android:textColor="#ffffff"
                                android:textAlignment="center"
                                android:textSize="7.5sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                        <ImageView
                            android:id="@+id/iv_task2"
                            android:layout_width="match_parent"
                            android:layout_height="95dp"
                            android:layout_marginTop="2dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            app:srcCompat="@drawable/task2"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_task2"
                            android:text="Poleć i zyskaj!"
                            android:textColor="#ffffff"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:textStyle="bold" />







                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/task3"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="10dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:background="@drawable/shape_gradient"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="15dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="+ 10 xp"
                                android:layout_marginTop="5dp"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="5dp"
                                android:textColor="#ffffff"
                                android:textAlignment="center"
                                android:textSize="7.5sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:text="+ 0.10 pkt"
                                android:layout_marginRight="5dp"
                                android:textColor="#ffffff"
                                android:textAlignment="center"
                                android:textSize="7.5sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="95dp"
                            android:layout_marginTop="2dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            app:srcCompat="@drawable/task3"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_task1"
                            android:text="Pozytywne odczucia"
                            android:textColor="#ffffff"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/textEarn7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layouttaks"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="Zdobyte nagrody"
                android:textAlignment="center"
                android:textSize="17sp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/textViewTerms1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_login"
                android:layout_centerHorizontal="true"
                android:layout_gravity="bottom"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="4dp"
                android:gravity="bottom"
                android:text="Zanim rozpoczniesz... "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewTerms2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewTerms2"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:text="Przeczytaj warunki i zasady programu nagród"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textSize="11sp" />

        </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />
</RelativeLayout>