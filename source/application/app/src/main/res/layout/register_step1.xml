<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:theme="@style/SignUp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_s2_slajd_rejestracja_true"

            />
        <TextView
            android:id="@+id/text3_step1"
            android:layout_width="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/text2_step1"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/bg_Profitz"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/text3_step1"
            android:textSize="22sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/input_layout_lastname"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/bg_Profitz"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/text4_step1"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/text2_step1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="330dp"
            android:text="@string/text2_step1"
            android:textColor="@color/bg_Profitz"
            android:textSize="29sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_name"
            android:layout_width="match_parent"
    app:errorTextColor="@color/red"
    android:textColorHint="@color/bg_Profitz"
    app:helperTextTextColor="@color/gray"
    app:hintTextColor="@color/gray"
        style="@style/TextInputLayoutStyle"
app:layout_constraintTop_toBottomOf="@id/text3_step1"
        app:counterOverflowTextAppearance="@style/counterOverride"
    app:counterTextAppearance="@style/counterText"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:boxStrokeColor="#878787"
        android:background="@color/transparent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:boxStrokeWidth="1dp"

        app:shapeAppearance="@style/Rounded"
    app:counterTextColor="@color/gray"
   >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextName"
                android:drawableTint="@color/colorPrimaryMid"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:backgroundTint="@color/gray"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textColorHint="@color/bg_Profitz"
                android:layout_centerHorizontal="true"
                android:paddingTop="10dp"

                android:textColorHighlight="@color/bg_Profitz"
                android:padding="10dp"
                android:textColorLink="@color/bg_Profitz"
                android:textAlignment="textStart"
                android:singleLine="true"
                android:ems="15"
                android:textColor="@color/bg_Profitz"
                android:hint="Wprowadź swoje imię"
                android:inputType="textPersonName"
                />
</com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_lastname"
            style="@style/TextInputLayoutStyle"
            app:boxStrokeColor="#878787"
            app:boxStrokeWidth="1dp"
            app:counterTextColor="@color/gray"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:layout_constraintTop_toBottomOf="@id/input_layout_name"
            app:errorTextColor="@color/red"
            android:textColorHint="@color/bg_Profitz"
            app:helperTextTextColor="@color/gray"
            app:hintTextColor="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:shapeAppearance="@style/Rounded"
            android:background="@color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
          >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextLastName"
                android:drawableTint="@color/colorPrimaryMid"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:backgroundTint="@color/gray"
                android:textColorHint="@color/bg_Profitz"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textCursorDrawable="@drawable/cursor_color"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"
                android:paddingTop="2dp"
                android:padding="10dp"
                android:textAlignment="textStart"
                android:singleLine="true"
                android:ems="15"
                android:textColor="@color/bg_Profitz"
                android:hint="@string/text5_step1"
                android:inputType="textPersonName"
                />
        </com.google.android.material.textfield.TextInputLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>