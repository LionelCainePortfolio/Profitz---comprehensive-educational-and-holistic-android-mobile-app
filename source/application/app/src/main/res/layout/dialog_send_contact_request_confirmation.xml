<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shapewoshadow"
    android:layout_marginBottom="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:padding="5dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_grey_line"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:gravity="center_horizontal">
    <TextView
        android:layout_width="70dp"
        android:textAlignment="center"
        android:layout_height="7dp"
        android:gravity="center_horizontal"
        android:background="@drawable/gradient_grey_button_shape_light_no_gradient"
        />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_below="@id/rl_grey_line"
        android:orientation="vertical"
        android:gravity="center">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:textSize="27sp"
    android:text="Potwierdzenie"
    android:textColor="@color/bg_Profitz"
    android:textAlignment="center"
    />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/confirmation_send_contact_request_text"
            android:textColor="#2C2C2C"
            android:text="Wysłać prośbę o kontakt do użytkownika?"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:textColor="#2C2C2C"
            android:text="Wszystkie wysłane prośby możesz anulować w dowolnym momencie."
            android:textAlignment="center"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/send"
                style="@style/MyButtonStyle"
                android:background="@drawable/gradient_grey_button_shape_light_no_gradient"
                android:text="Anuluj"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:paddingTop="10dp"
                android:textColor="@color/bg_Profitz"
                android:textStyle="bold"
                android:paddingBottom="10dp"
                android:layout_marginEnd="5dp"
                android:textSize="15sp"
                android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cancel"
            style="@style/MyButtonStyle"
            android:background="@drawable/gradient_button_shape"
            android:text="Wyślij"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:layout_marginStart="5dp"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:textSize="15sp"
            android:layout_marginTop="15dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</RelativeLayout>
</androidx.core.widget.NestedScrollView>