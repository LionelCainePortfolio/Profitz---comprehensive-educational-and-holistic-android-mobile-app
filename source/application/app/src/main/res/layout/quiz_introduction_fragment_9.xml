<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context="com.profitz.app.promos.activities.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="700dp"
            android:id="@+id/global_const_bg"
            android:background="@color/white"
            android:layout_marginTop="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:paddingBottom="100dp"
            >
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/security_banner"
                    app:riv_corner_radius="20dip"
                    app:riv_mutate_background="true"
                    app:riv_oval="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bezpieczeństwo w sieci to podstawa, poniżej dowiesz się więcej jak zabezpieczyć swoje elektroniczne środki."
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:id="@+id/text1"
                    android:layout_marginTop="15dp"
                    android:textColor="#151515"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Świat kryptowalut jest pełen oszustów próbujących ukraść klucze prywatne do portfeli kryptowalut i środki kryptowalutowe. Aby uniknąć oszustwa lub zhakowania, zalecamy przestrzeganie naszych zasad dotyczących bezpieczeństwa w przestrzeni kryptograficznej:"
                    android:textSize="15sp"
                    android:layout_marginTop="15dp"
                    android:textAlignment="center"
                    android:textColor="#3A3A3A"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* Używaj portfeli sprzętowych, takich jak Trezor, do przechowywania kryptowalut!"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp"
                    android:textColor="#3A3A3A"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* Nigdy nie podawaj nikomu swojego prywatnego klucza, którego używasz by uzyskać dostęp do portfela kryptowalut!"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:textColor="#3A3A3A"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* Zawsze używaj unikalnych i silnych haseł!"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:textColor="#3A3A3A"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* Nie wysyłaj ETH ani BTC na żaden airdrop!"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:textColor="#3A3A3A"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* Używaj maszyn wirtualnych do niestandardowych portfeli!"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:textColor="#3A3A3A"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* Aktywuj uwierzytelnianie dwuskładnikowe (2fa), gdy tylko jest to możliwe!"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:textColor="#3A3A3A"

                    />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</RelativeLayout>