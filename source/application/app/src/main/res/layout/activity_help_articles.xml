<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:id="@+id/rl_global_articles_one"
>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="#fff"
            android:orientation="vertical"
           >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/global_const_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@drawable/shape_round"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <RelativeLayout
                    android:id="@+id/help_layout_info"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/gold_gradient_shape_oval"
                    android:bottomLeftRadius="15dp"
                    android:bottomRightRadius="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </RelativeLayout>

                <TextView
                    android:id="@+id/topic_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:elevation="1dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:text="Topic_name"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="106dp"
                    android:background="@drawable/gold_gradient"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/arrow_back"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:focusable="true"
                        android:clickable="true"
                        android:foreground="@drawable/ripple_effect"
                        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_white_24"
                        card_view:layout_constraintStart_toStartOf="parent"
                        card_view:layout_constraintTop_toTopOf="parent" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_layout_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="115dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/shapewoshadow"
                    android:elevation="10dp"
                    android:minHeight="150dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/rl_layout_1_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:text="Podstawy"
                        android:textColor="@color/bg_Profitz"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rl_layout_1_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/rl_layout_1_title"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp" />

                </RelativeLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    app:layout_constraintTop_toBottomOf="@id/rl_layout_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
                <RelativeLayout
                    android:id="@+id/rl_layout_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginRight="15dp"
                   android:visibility="gone"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/shapewoshadow"
                    android:elevation="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rl_layout_1">

                    <TextView
                        android:id="@+id/rl_layout_2_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:text="Podstawy"
                        android:textColor="@color/bg_Profitz"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rl_layout_2_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/rl_layout_2_title"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp" />

                </RelativeLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    app:layout_constraintTop_toBottomOf="@id/rl_layout_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
                <RelativeLayout
                    android:id="@+id/rl_layout_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:visibility="gone"

                    android:layout_marginRight="15dp"
                    android:background="@drawable/shapewoshadow"
                    android:elevation="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rl_layout_2">

                    <TextView
                        android:id="@+id/rl_layout_3_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:text="Podstawy"
                        android:textColor="@color/bg_Profitz"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rl_layout_3_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/rl_layout_3_title"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp" />

                </RelativeLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    app:layout_constraintTop_toBottomOf="@id/rl_layout_3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
                <RelativeLayout
                    android:id="@+id/rl_layout_4"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="25dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/shapewoshadow"
                    android:elevation="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rl_layout_3">

                    <TextView
                        android:id="@+id/rl_layout_4_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:text="Podstawy"
                        android:textColor="@color/bg_Profitz"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/rl_layout_4_title"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp" />

                </RelativeLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    app:layout_constraintTop_toBottomOf="@id/rl_layout_4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </ScrollView>
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />
</RelativeLayout>