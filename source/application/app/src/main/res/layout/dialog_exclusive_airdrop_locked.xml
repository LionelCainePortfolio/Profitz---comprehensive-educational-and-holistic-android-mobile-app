<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context="com.profitz.app.promos.activities.LoginActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="700dp"
            android:id="@+id/global_const_bg"
            android:background="@color/white"
            android:layout_marginTop="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationViewLocked"
                android:layout_width="match_parent"
                android:layout_marginTop="0dp"
                android:layout_height="300dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_fileName="locked_content.json"
                app:lottie_autoPlay="true"
                app:lottie_loop="false"/>
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zawartość niedostępna!"
                android:textColor="#DA3626"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/animationViewLocked"
                />
            <TextView
                android:id="@+id/text2"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="Ta zawartość jest widoczna tylko dla użytkowników z wykupionym planem Premium."
                android:textColor="@color/bg_Profitz"
                android:textSize="21sp"
                android:textAlignment="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text1"
                />
            <TextView
                android:id="@+id/text3"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="Czy chcesz odblokować dostęp do tej zawartości, a także do wszystkich innych Eksluzywnych Aidropów?"
                android:textColor="@color/bg_Profitz"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginTop="30dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text2"
                />
            <Button
                android:id = "@+id/unlock_content"
                android:layout_width = "310dp"
                android:layout_height = "40dp"
                android:textSize="15sp"
                android:layout_alignParentBottom="true"
                app:layout_constraintBottom_toTopOf="@id/dismiss_dialog_locked_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/ripple_effect"
                android:textColor="@color/white"
                android:background="@drawable/gradient_button_shape"
                android:layout_centerHorizontal = "true"
                android:layout_marginTop = "5dp"
                android:text = "ODBLOKUJ TERAZ"/>
            <TextView
                android:id = "@+id/dismiss_dialog_locked_content"
                android:layout_width = "150dp"
                android:layout_height = "40dp"
                android:textSize="12sp"
                android:layout_alignParentBottom="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:layout_marginStart="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:textAlignment="center"
                android:foreground="@drawable/ripple_effect"
                android:textColor="@color/colorPrimaryMid"
                android:layout_centerHorizontal = "true"
                android:text = "MOŻE PÓŹNIEJ"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>