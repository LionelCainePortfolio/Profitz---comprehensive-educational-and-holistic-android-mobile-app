<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="120dp"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:paddingBottom="15dp"
    android:id="@+id/global_comm_nest"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Zgłoś zastrzeżenie"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:id="@+id/pick_reason"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pick_reason"
            android:text="Wybierz powód zgłoszenia"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textSize="17sp"
            android:id="@+id/type_reason"
            />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/type_reason"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/report_1"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="120dp"
            android:minHeight="40dp"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:id="@+id/sendReportInactive"

            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/edittext_button_style_rounded"
            >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Promocja jest już nieaktywna"
android:gravity="center_vertical"
    android:layout_marginStart="20dp"
    android:textSize="19sp"
    android:textStyle="bold"
/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:foregroundGravity="center"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24"
                />

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/report_1"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/report_2"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="120dp"
            android:id="@+id/sendReportUrl"
            android:minHeight="40dp"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/edittext_button_style_rounded"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Niedziałający link/i"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:textSize="19sp"
                android:textStyle="bold"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:foregroundGravity="center"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24"
                />

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/report_2"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/report_3"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="120dp"
                android:minHeight="40dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:id="@+id/sendReportOther"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/edittext_button_style_rounded"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inny powód"
                    android:gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:foregroundGravity="center"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24"
                    />

            </RelativeLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="20dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/report_3"
    android:text="Pamiętaj, że Twoje zgłoszenie otrzymamy tylko jako powiadomienie. Nie możemy na nie odpowiedzieć. Jeśli masz jakieś pytanie, na które chciałbyś otrzymać odpowiedź, wyślij nam e-mail na adres kontakt@profitz.app, lub skontaktuj się z nami za pomocą czatu."/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
