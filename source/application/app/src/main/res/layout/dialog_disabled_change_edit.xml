<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shapewoshadow"
    android:layout_marginBottom="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:padding="5dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_grey_line"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="7dp"
            android:background="@drawable/gradient_grey_button_shape_light_no_gradient"
            android:gravity="center_horizontal"
            android:textAlignment="center" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_below="@id/rl_grey_line"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zmiana niemożliwa"
            android:textStyle="bold"
            android:textSize="27sp"
            android:textColor="@color/bg_Profitz"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/text2"
            android:textColor="#2C2C2C"
            android:textAlignment="center"
            android:text="Zmiana tej wartości jest niedostępna."
            />
        <TextView
            android:id="@+id/button_understand_disable_change_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MyButtonStyle"
            android:background="@drawable/gradient_button_shape"
            android:text="Rozumiem"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:textSize="20sp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</RelativeLayout>
</androidx.core.widget.NestedScrollView>