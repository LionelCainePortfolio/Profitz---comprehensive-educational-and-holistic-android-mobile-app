<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context="com.profitz.app.promos.activities.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="700dp"
            android:id="@+id/global_const_bg"
            android:background="@color/white"
            android:layout_marginTop="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:paddingBottom="120dp"
                >

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/didnt_receive_airdrop_banner"
                    app:riv_corner_radius="20dip"
                    app:riv_mutate_background="true"
                    app:riv_oval="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jeśli wziąłeś(aś) udział w aidropie a nie otrzymałeś(aś) zrzutu, to najprawdopodobniej zrobiłeś(aś) cośnie tak. Przeczytaj poniższy tekst by dowiedzieć się więcej."
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:id="@+id/text1"
                    android:layout_marginTop="15dp"
                    android:textColor="#151515"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Istnieje wiele powodów, dla których mogłeś(aś) nie otrzymać swoj części z zrzutu kryptowalut. Być może nie wykonałeś wszystkich kroków, wprowadziłeś nieprawidłowe informacje lub zapomniałeś przesłać formularz ze swoimi danymi. Możliwe, że opuściłeś także grupę Telegram, usunąłeś swoje udziały w mediach społecznościowych lub zmieniłeś swoje nazwy użytkowników. Wszystko to spowoduje, że stracisz nagrody za zrzuty (airdropy)."
                    android:textSize="15sp"
                    android:layout_marginTop="15dp"
                    android:textAlignment="center"
                    android:textColor="#3A3A3A"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aby mieć pewność, że zawsze otrzymasz zrzuty, postępuj zgodnie z instrukcją krok po kroku z danego airdropa i zawsze pamiętaj, aby nie usuwać swoich postów w mediach społecznościowych i pozostać w grupach Telegrama, dopóki dystrybucja tokenów nie zostanie zakończona."
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp"
                    android:textColor="#3A3A3A"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inne typowe powody braku wypłaty z airdropu: "
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp"
                    android:textColor="#3A3A3A"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* wielokrotnie próbowałeś ubiegać się o odbiór;"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:textColor="#3A3A3A"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* nie masz wystarczającej liczby znajomych na Twitterze/Facebooku, lub podejrzane/fałszywe konto;"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:textColor="#3A3A3A"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* nigdy nie wysłałeś wiadomości w grupie Telegram;"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:textColor="#3A3A3A"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* Twój Twitter/Facebook jest prywatny (zaliczane będą tylko posty publiczne)."
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:textColor="#3A3A3A"
                    />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</RelativeLayout>