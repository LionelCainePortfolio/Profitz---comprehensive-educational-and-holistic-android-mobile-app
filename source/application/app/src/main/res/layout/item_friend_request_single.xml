<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:elevation="0dp"
    android:foreground="@drawable/ripple_effect_rectangle"
    android:background="@drawable/shapewoshadow"
    android:layout_marginEnd="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:animateLayoutChanges="true">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_marginTop="13dp"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="13dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />
        <ImageView
            android:id="@+id/imageAnim"
            android:layout_marginTop="13dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="13dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/progresscircle"
            />
        <View
            android:id="@+id/onlineNotifier"
            android:layout_marginTop="13dp"
            style="@style/OnlineNotifier"
            android:layout_marginStart="47dp"
            />

        <TextView
            android:id="@+id/username"
            style="@style/MyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/image"
            android:layout_marginTop="13dp"
            android:textSize="19sp" />
        <TextView
            style="@style/MyTextView"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/username"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/image"
            android:textColor="@color/grey"
            android:maxLines="1"
            android:textSize="13sp"
            android:ellipsize="end"/>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_centerVertical="true">

            <TextView
                android:id="@+id/btnActionAccept"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingStart="30dp"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/gradient_button_shape"
                android:paddingEnd="30dp"
                android:text="Akceptuj"
                />
            <TextView
                android:id="@+id/btnActionReject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              android:layout_centerVertical="true"
                app:layout_constraintEnd_toEndOf="@id/btnActionAccept"
                app:layout_constraintStart_toStartOf="@id/btnActionAccept"
                app:layout_constraintTop_toBottomOf="@id/btnActionAccept"
                android:text="OdrzuÄ‡"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:textColor="@color/grey"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />
</androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>
</RelativeLayout>
