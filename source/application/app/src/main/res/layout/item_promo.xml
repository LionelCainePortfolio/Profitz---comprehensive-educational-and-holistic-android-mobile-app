<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:padding="0dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:ignore="NamespaceTypo"
    android:layout_marginStart="0dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="0dp"
    android:layout_marginBottom="0dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="0dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    app:layout_constrainedHeight="true"
                    android:layout_gravity="end"
                    android:background="@drawable/shape_card"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_weight="0.2">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/rl_bg"
                        android:background="@drawable/round_outline_item"
                        android:scaleType="fitXY"
                        />

                    <TextView
                        android:id="@+id/text_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="65dp"
                        android:layout_marginTop="10dp"
                        android:maxWidth="200dp"
                        android:text="@string/article_title"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        app:ignore="RtlCompat,RtlHardcoded" />

                    <TextView
                        android:id="@+id/textPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/text_Price"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        android:textColor="@color/white"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="-9.5dp"
                        android:foregroundGravity="right"
                        android:gravity="right"
                        android:text="@string/zarob_odd"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:ignore="RtlCompat,RtlHardcoded" />

                    <TextView
                        android:id="@+id/text_PriceType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/layout_hr1"
                        android:layout_gravity="start"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="-.9dp"
                        android:layout_toStartOf="@+id/text_Price"
                        android:foregroundGravity="right"
                        android:gravity="right"
                        android:text="zÅ‚"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:ignore="RtlCompat,RtlHardcoded" />

                    <TextView
                        android:id="@+id/text_Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/layout_hr1"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="start"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="-7dp"
                        android:foregroundGravity="right"
                        android:gravity="right"
                        android:text="@string/zarobek"
                        android:textColor="@color/colorPrimary"
                        android:textSize="23sp"
                        android:textStyle="bold"
                        app:ignore="RtlCompat,RtlHardcoded" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="start"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:foregroundGravity="right"
                        android:gravity="right"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_marginTop="3dp"
                                android:foregroundGravity="center"
                                android:maxWidth="10dp"
                                android:maxHeight="10dp"
                                card_view:srcCompat="@drawable/ic_baseline_add_w_24"
                                app:ignore="RtlCompat,RtlHardcoded" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="end"
                                android:textColor="@color/white"
                                android:layout_marginBottom="2dp"
                                android:foregroundGravity="right"
                                android:gravity="right"
                                android:text="10 pkt"
                                android:textSize="9sp"
                                android:textStyle="bold"
                                app:ignore="RtlCompat,RtlHardcoded" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imagePlus2"
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_marginTop="3dp"
                                android:foregroundGravity="center"
                                android:maxWidth="10dp"
                                android:maxHeight="10dp"
                                card_view:srcCompat="@drawable/ic_baseline_add_w_24"
                                app:ignore="RtlCompat,RtlHardcoded" />

                            <TextView
                                android:id="@+id/textPlusXp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="end"
                                android:textColor="@color/white"
                                android:foregroundGravity="right"
                                android:gravity="right"
                                android:text="10 xp"
                                android:textSize="9sp"
                                android:textStyle="bold"
                                app:ignore="RtlCompat,RtlHardcoded" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_short_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_title"
                        android:layout_marginStart="65dp"
                        android:textColor="@color/white"
                        android:layout_marginTop="3dp"
                        android:maxWidth="180dp"
                        android:minHeight="65dp"
                        android:text="@string/article_body"
                        android:textSize="10sp"
                        app:ignore="RtlCompat,RtlHardcoded" />

                    <LinearLayout
                        android:id="@+id/layout_hr1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_above="@id/layout_underline"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#ffffff" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/layout_underline"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="2dp"
                        android:paddingStart="10dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:ignore="RtlCompat,RtlHardcoded">

                        <LinearLayout
                            android:id="@+id/firstlinear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_alignParentStart="true"
                                android:layout_gravity="start"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="2dp"
                                android:contentDescription="@string/gwiazda"
                                android:foregroundGravity="left"
                                android:gravity="left"
                                android:maxWidth="20dp"
                                android:maxHeight="20dp"
                                card_view:srcCompat="@drawable/ic_baseline_star_gold_24"
                                app:ignore="RtlCompat,RtlHardcoded" />

                            <TextView
                                android:id="@+id/text_rating_score"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentLeft="true"
                                android:layout_gravity="start"
                                android:layout_marginEnd="0dp"
                                android:foregroundGravity="left"
                                android:gravity="left"
                                android:text="@string/ocena"
                                android:textColor="#32CD32"
                                android:textSize="11.5sp"
                                android:textStyle="bold"
                                app:ignore="RtlCompat,RtlHardcoded" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_marginTop="1.5dp"
                                android:layout_marginEnd="10dp"
                                android:text="(325)"
                                android:textColor="@color/white"
                                android:textSize="9.5sp"
                                app:ignore="RtlCompat,RtlHardcoded" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/firstlinear">

                            <ImageView
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_alignParentLeft="true"
                                android:layout_gravity="left"
                                android:layout_marginEnd="2dp"
                                android:contentDescription="@string/zegar"
                                android:foregroundGravity="left"
                                android:gravity="left"
                                android:maxWidth="20dp"
                                android:maxHeight="20dp"
                                card_view:srcCompat="@drawable/ic_baseline_access_time_white_24"
                                app:ignore="RtlCompat,RtlHardcoded" />
                            <TextView
                                android:id="@+id/text_how_long"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_alignParentLeft="true"
                                android:layout_gravity="start"
                                android:layout_marginEnd="10dp"
                                android:textColor="@color/white"
                                android:foregroundGravity="right"
                                android:gravity="right"
                                android:text="@string/czas"
                                android:textSize="11.5sp"
                                android:textStyle="bold"
                                app:ignore="RtlCompat,RtlHardcoded" />
                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center"
                            android:layout_marginEnd="12dp"
                            android:foregroundGravity="right"
                            android:textAlignment="center">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:minWidth="130dp">

                                <ImageView
                                    android:id="@+id/imageView2"
                                    android:layout_width="17dp"
                                    android:layout_height="17dp"
                                    android:layout_marginEnd="1dp"
                                    android:maxWidth="20dp"
                                    android:maxHeight="20dp"
                                    card_view:srcCompat="@drawable/ic_baseline_hourglass_empty_white_24"
                                    app:ignore="RtlCompat,RtlHardcoded" />

                                <TextView
                                    android:id="@+id/releaseDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="1.5dp"
                                    android:layout_marginEnd="0dp"
                                    android:layout_toEndOf="@+id/imageView2"
                                    android:maxHeight="20dp"
                                    android:textColor="@color/white"
                                    android:text="@string/pozostalo_countdown"
                                    android:textAlignment="viewEnd"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    app:ignore="RtlCompat,RtlHardcoded"
                                    app:srcCompat="@android:drawable/btn_star_big_on" />
                            </RelativeLayout>
                        </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_poster"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:civ_border_width="0dp"
            app:civ_border_color="#FF000000"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            android:adjustViewBounds="true"
            android:contentDescription="@string/default_image_content_description"
            android:scaleType="centerCrop" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
