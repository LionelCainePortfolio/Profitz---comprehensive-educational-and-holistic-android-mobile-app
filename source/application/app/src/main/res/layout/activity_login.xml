<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:id="@+id/global_login"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_weight="4"
            app:srcCompat="@drawable/ic_login"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <View
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_margin="?actionBarSize"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="#fff"
            android:text="Zaloguj się"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:textColor="#fff"
            android:textColorHint="#eee"
            android:paddingStart="20dp"
            android:textCursorDrawable="@color/white"
            android:paddingEnd="20dp"
            android:id="@+id/editTextUsername"
            android:hint="Wprowadź login..."
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/rounded_corner"
            android:textSize="18sp" />
        <EditText
            android:textColor="#fff"
            android:textColorHint="#eee"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textCursorDrawable="@color/white"
            android:id="@+id/editTextPassword"
            android:hint="Wprowadź hasło..."
            android:inputType="textPassword"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/rounded_corner"
            android:textSize="18sp" />
        <Button
            android:paddingRight="20dp"
            android:id="@+id/buttonLogin"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:layout_marginTop="20dp"
            android:paddingBottom="5dp"
            android:background="@drawable/button_rectangle_white_border"
            android:text = "ZALOGUJ SIĘ"
            android:textColor="#FFFFFF"
            android:layout_width="160dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            android:textSize="15sp"
            android:text="Nie pamiętasz hasła?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginBottom="10dp"
            android:text="Nie masz konta?\n Zarejestruj się!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#858585"
            android:id="@+id/textViewRegister"
            />



    </LinearLayout>

</RelativeLayout>