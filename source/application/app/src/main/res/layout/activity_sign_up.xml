<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/global_signup_rl"
    android:background="@drawable/slajd_rejestracja"
    tools:context="com.profitz.app.promos.activities.SignUpActivity">
    <Button
        android:id = "@+id/btn_register"
        android:visibility="gone"
        android:layout_width = "310dp"
        android:layout_height = "40dp"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:textColor="@color/white"
        android:background="@drawable/gradient_button_shape"
        android:layout_centerHorizontal = "true"
        android:layout_marginTop = "5dp"
        android:text = "ZAREJESTRUJ SIÄ˜"/>
    <Button
        android:id = "@+id/start_step"
        android:layout_width = "310dp"
        android:layout_height = "40dp"
        android:textSize="15sp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:textColor="@color/white"
        android:background="@drawable/gradient_button_shape"
        android:layout_centerHorizontal = "true"
        android:layout_marginTop = "5dp"
        android:text = "ROZPOCZNIJ"/>
    <Button
        android:id = "@+id/next_step"
        android:layout_width = "310dp"
        android:layout_height = "40dp"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:textColor="@color/white"
        android:background="@drawable/gradient_button_shape"
        android:layout_centerHorizontal = "true"
        android:layout_marginTop = "5dp"
        android:text = "KONTYNUUJ"/>
    <Button
        android:visibility="visible"
        android:id="@+id/textViewBack"
        android:layout_width = "25dp"
        android:layout_height = "25dp"
        android:layout_alignParentLeft= "true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal = "true"
        android:layout_marginTop = "47dp"
        android:layout_marginStart="15dp"

        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:background="@drawable/ic_baseline_arrow_back_ios_white_24"
        />
    <Button
        android:visibility="visible"
        android:layout_width = "25dp"
        android:layout_height = "25dp"
        android:layout_alignParentEnd= "true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal = "true"
        android:layout_marginTop = "47dp"
        android:layout_marginEnd="15dp"

        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:background="@drawable/ic_baseline_help_outline_white_24"
        />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>


</RelativeLayout>