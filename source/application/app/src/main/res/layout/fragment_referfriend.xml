<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#FAFAFA"
    android:layout_height="match_parent"
    tools:context="com.profitz.app.promos.PromosActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAFAFA"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingBottom="5dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="800dp"
                android:id="@+id/global_const_bg"
                android:background="@drawable/shape_round"
                android:layout_marginTop="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >
                <RelativeLayout
                    android:id="@+id/points_layout_info"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:background="@drawable/gold_gradient_shape"
                    android:bottomLeftRadius="25dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:bottomRightRadius="25dp"
                    android:elevation="9dp">





                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/points_layout_tabs"
                    android:layout_width="match_parent"
                    android:layout_height="380dp"
                    android:layout_marginTop="210dp"
                    android:background="@drawable/shapewoshadow"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="15dp"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:elevation="10dp"
                    >
                    <TextView
                        android:id="@+id/textEarn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true"
                        android:gravity="center"
                        android:textIsSelectable="true"
                        android:letterSpacing="0.05"
                        android:text="Udostępnij swój kod polecający"
                        android:layout_marginTop="80dp"
                        android:layout_gravity="center_horizontal"
                        android:foregroundGravity="center_horizontal"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/text_id1"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/textEarn1"
                        android:gravity="center"
                        android:layout_marginTop="2dp"
                        android:layout_gravity="center_horizontal"
                        android:foregroundGravity="center_horizontal"
                        >
                        <TextView
                            android:id="@+id/textEarn5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textIsSelectable="true"
                            android:letterSpacing="0.05"
                            android:text="ABCDEF"
                            android:layout_marginTop="0dp"
                            android:textAlignment="center"
                            android:textColor="@color/bg_Profitz"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                        <ImageView
                            android:layout_width="20dp"
                            android:padding="3dp"
                            android:layout_marginTop="1dp"
                            android:id="@+id/copy_code"
                            android:layout_height="25dp"
                            app:srcCompat="@drawable/ic_baseline_content_copy_24"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textEarn2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_id1"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:text="Ty i Twoi znajomi zyskacie po 10 monet, gdy tylko uda im się wykonać swoją pierwszą promocję!"
                        android:textAlignment="center"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:id="@+id/textEarn3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textEarn2"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:text="Dodatkowo jeśli posiadasz plan Premium - każda polecona przez Ciebie osoba, która wpisze Twój kod podzas rejestacji, będzie widziała Twój link referencyjny w danej, wykupionej przez Ciebie licencji na promocję!"
                        android:textAlignment="center"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/buttonShareCode"
                        android:layout_width="290dp"
                        android:layout_height="45dp"
                        android:layout_below="@id/textEarn3"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/button_rectangle_pink"
                        android:clickable="true"

                        android:focusable="true"
                        android:foreground="@drawable/ripple_effect_rectangle"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp"
                        android:text="ZAPROŚ ZNAJOMEGO"
                        android:textColor="#ffffff"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/buttonHowItWorks"
                        android:layout_width="290dp"
                        android:layout_height="35dp"

                        android:layout_below="@id/buttonShareCode"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="7dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="@drawable/ripple_effect_rectangle"
                        android:gravity="center"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp"
                        android:text="JAK TO DZIAŁA"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </RelativeLayout>
                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="230dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:elevation="11dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    app:srcCompat="@drawable/refer" />
                <RelativeLayout
                    android:id="@+id/global_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/shapewoshadow"
                    android:elevation="10dp"
                    android:layout_marginBottom="85dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintTop_toBottomOf="@id/points_layout_tabs"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    >

                    <RelativeLayout
                        android:id="@+id/rl1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/tx1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Zyskałeś już: "
                            android:textSize="26sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tx2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/tx1"
                            android:text="0"
                            android:textColor="@color/green"
                            android:textSize="27sp" />

                        <TextView
                            android:id="@+id/tx2_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_toEndOf="@id/tx2"
                            android:text=" PKT"
                            android:textColor="@color/green"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_toEndOf="@id/tx2_1"
                            android:text="*"
                            android:textColor="@color/io_customerly__hints_textcolor"
                            android:textSize="13sp"
                            android:visibility="gone" />
                    </RelativeLayout>
                    <View android:id="@+id/separator"
                        android:background="#B1B0B0"
                        android:layout_below="@id/rl1"
                        android:layout_width = "fill_parent"
                        android:layout_height="0.5dip"
                        android:layout_centerVertical ="true"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/separator"
                        android:maxHeight="100dp"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@id/separator2">

                            <TextView
                                android:id="@+id/pending_refferals"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:text="0"
                                android:textColor="@color/colorPrimary"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/pending_refferals"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="5dp"
                                android:text="Oczekujące"
                                android:textSize="18sp" />


                        </RelativeLayout>
                        <View android:id="@+id/separator2"
                            android:background="@color/transparent"
                            android:layout_height = "75dp"
                            android:layout_width="1dip"
                            android:layout_centerHorizontal ="true"
                            />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/separator2">

                            <TextView
                                android:id="@+id/success_refferals"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:text="0"
                                android:textAlignment="center"
                                android:textColor="@color/colorPrimary"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/success_refferals"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="5dp"
                                android:text="Zatwierdzone"
                                android:textSize="18sp" />


                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="50dp"
                    android:visibility="gone"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textSize="11sp"
                    android:textColor="@color/io_customerly__hints_textcolor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/global_rl"
                    android:text="* Do kwoty 'zyskałeś już' wliczane są monety w przeliczeniu na euro (1€=4.30zł) a następnie na zł."
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textSize="11sp"
                    android:textColor="@color/io_customerly__hints_textcolor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/global_rl"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:visibility="gone"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_below="@+id/textEarn3"
                android:layout_marginTop="-5dp"
                app:srcCompat="@drawable/refferal_line" />


            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buttonShareCode"
                android:layout_marginTop="10dp"
                android:text="Poproś swojego znajomego, aby podał ten kod podczas rejestracji"
                android:textAlignment="center"
                android:textSize="11sp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>