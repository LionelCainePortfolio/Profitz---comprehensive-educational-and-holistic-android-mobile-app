<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FAFAFA"
    android:windowSoftInputMode="adjustResize|stateVisible"
    android:fillViewport="true"
    android:isScrollContainer="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingTop="5dp"
        android:paddingRight="30dp"
        android:paddingBottom="5dp">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:foregroundGravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:srcCompat="@drawable/refer" />

    <TextView
        android:id="@+id/textEarn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_user"
        android:layout_marginTop="25dp"
        android:text="Wyślij monety"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="27sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textEarn2"
        android:layout_width="250dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textEarn"
        android:layout_marginTop="20dp"
        android:text="Chcesz sprawić prezent znajomemu? Wyślij do niego monety w łatwy sposób!"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold" />


    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textEarn5"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_rectangle_pink"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Zaczynajmy"
        android:textColor="#ffffff"
        android:textSize="15sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>