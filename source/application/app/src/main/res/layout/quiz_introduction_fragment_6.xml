<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context="com.profitz.app.promos.activities.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="700dp"
            android:id="@+id/global_const_bg"
            android:background="@color/white"
            android:layout_marginTop="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:paddingBottom="120dp"
                >

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/security"
                    app:riv_corner_radius="20dip"
                    app:riv_mutate_background="true"
                    app:riv_oval="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Poznaj jaki sposób przechowywania kryptowalut jest najlepszy."
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:id="@+id/text1"
                    android:layout_marginTop="15dp"
                    android:textColor="#151515"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="W przypadku kryptowalut, dobre przechowywanie ich jest niezwykle ważne. Świat kryptowalut nie jest zbytnio przyjazny – nieuczciwi uczestnicy rynku czyhają na Was na każdym kroku, mając mnóstwo wyrafinowanych strategii kradzieży funduszy użytkowników. Dobra praktyka ochrony Twoich kryptowalut powinna być zatem priorytetem."
                    android:textSize="15sp"
                    android:layout_marginTop="15dp"
                    android:textAlignment="center"
                    android:textColor="#3A3A3A"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Masz do dyspozycji szereg opcji przechowywania kryptowalut, każda z własnymi kompromisami w zakresie bezpieczeństwa i użyteczności."
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp"
                    android:textColor="#3A3A3A"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jeżeli masz taką możliwość to najlepiej w ogóle nie przechowywać swoich kryptowalut online. Jeśli przechowujesz kryptowaluty u operatora zewnętrznego dochodzi ryzyko utraty zdeponowanych środków nie z Twojej winy, ale z winy tegoż operatora."
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp"
                    android:textColor="#3A3A3A"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dotyczy to zarówno giełd, portfeli online jak i kantorów i jakichkolwiek innych miejsc do których masz dostęp poprzez logowanie na stronie. Serwer giełdy może zostać uszkodzony. Może się wydarzyć szereg losowych lub zamierzonych okoliczności, które spowodują że stracisz swoje kryptowaluty. Tego rodzaju ryzyka nie da się uniknąć."
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp"
                    android:textColor="#3A3A3A"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A więc gdzie najbezpieczniej będzie przechowywać swoje kryptowaluty?"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp"
                    android:textColor="#3A3A3A"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Najlepiej przechowywać kryptowaluty w miejscu odłączonym od internetu ponieważ brak dostępu przez sieć zapewnia najskuteczniejszą ochronę. Do przechowywania bitcoina i altcoinów najbezpieczniejszym rozwiązaniem będzie portfel papierowy lub portfel sprzętowy."
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp"
                    android:textColor="#3A3A3A"
                    />




            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</RelativeLayout>