<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context="com.profitz.app.promos.activities.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="700dp"
            android:id="@+id/global_const_bg"
            android:background="@color/white"
            android:layout_marginTop="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:paddingBottom="100dp"
                >
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/airdrops_banner"
                    app:riv_corner_radius="20dip"
                    app:riv_mutate_background="true"
                    app:riv_oval="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Airdropy to programy dystrybucji darmowych kryptowalut, w zamian za wykonanie prostych, konkretnych czynności lub zadań."
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:id="@+id/text1"
                    android:layout_marginTop="15dp"
                    android:textColor="#151515"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wiele firm, które oferują usługi kryptowalutowe (np. giełdy, kantory, portfele kryptowalut) dystrybuuje darmowe monety (kryptowalut) do swoich społeczności, aby zwiększyć widoczność swojego projektu (firmy), zwiększyć podaż w obiegu i stymulować handel. Te bezpłatne dystrybucje są powszechnie znane jako „airdropy” (zrzuty z powietrza)."
                    android:textSize="15sp"
                    android:layout_marginTop="15dp"
                    android:textAlignment="center"
                    android:textColor="#3A3A3A"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Większość prezentowanych przez nas airdropów to tzw.„dropy bounty”, które nagradzają Cię tokenami (monetami/kryptowalutami) za wykonanie prostych zadań w mediach społecznościowych (dołączenie do grupy Telegram, ponowne posty na Twitterze, udostępnienie na Facebooku itp.)."
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp"
                    android:textColor="#3A3A3A"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ta oferta tworzy scenariusz korzystny dla wszystkich, ponieważ firma otrzymuje bezpłatny marketing, a Ty otrzymujesz darmowe kryptowaluty. Inne zrzuty nagrodzą cię za zwykłe trzymanie określonej monety bez oczekiwania wzajemnych korzyści. Np. kupujesz na giełdzie/kantorze kryptowalut, kryptowalutę X i trzymasz ją przez czas określony w regulaminie zrzutu. Za tą czynność otrzymasz nagrodę uzależnioną od firmy/projektu i innych czynników, które opisane są dokładnie w każdym regulaminie zrzutu."
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp"
                    android:textColor="#3A3A3A"

                    />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</RelativeLayout>